#!/usr/bin/env ruby

require 'benchmark'

size = 1000

# system('curl http://127.0.0.1:8080 --header X-INIT-COUNTER:1')

puts Benchmark::CAPTION
puts Benchmark.measure {
  threads = size.times.map do
    Thread.new do
      system('curl http://127.0.0.1:8080')
    end
  end

  threads.each(&:join)
}
