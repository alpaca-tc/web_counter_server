#!/usr/bin/env ruby

require 'bundler/setup'
require 'etc'
require 'open-uri'

$LOAD_PATH.unshift(File.expand_path('../lib', __dir__))
require 'web_counter_server'

def use_cpu_and_io(count)
  # IOを使う
  response = OpenURI.open_uri("https://www.google.com/search?q=#{count}").read

  # CPUを使い切る
  i = 0
  while i < 100_000_000; i += 1 end

  response
end

counter = 0

WebCounterServer.start do |request, response|
  # Counterを0にしておく
  counter = 0 if request.headers['X-INIT-COUNTER']
  counter += 1

  # CPUとIOをいい感じに使う処理を書く
  body = use_cpu_and_io(counter)

  response.set_status(200)
  response.headers['Content-Type'] = 'text/html'
  response.set_body("#{counter}\n")
end
