#!/usr/bin/env ruby

require 'bundler/setup'
require 'open-uri'
require 'logger'
require 'pry'

class WebCounterServer
  def self.logger
    @logger ||= Logger.new($stdout)
  end

  def initialize(host:, port:)
    @host = host
    @port = port
  end

  def start(workers: 1, threads: 1, &block)
    trap('INT') { on_exit }

    # リクエストの受付開始
    logger.info("Listening on tcp://#{@host}:#{@port}")
    server = TCPServer.new(@host, @port)

    # レスポンスを返す
    pids = Array.new(workers) do
      fork do
        local_threads = threads.times.map do
          Thread.new { run(server, &block) }
        end

        local_threads.last.join
      end
    end

    Process.waitall
  end

  private

  # リクエストが来たらレスポンスを返す
  def run(server, &block)
    loop do
      # リクエストが来たら
      socket = server.accept
      logger.debug("Receive request")

      serve(socket, &block)
    rescue IO::WaitReadable, Errno::EINTR
      IO.select([server])
      retry
    end
  end

  # レスポンスを返す
  def serve(socket, &block)
    response = block.call
    socket.write(response)
    logger.debug('Response sent')
  rescue => error
    logger.error "#{error.message} #{error.backtrace}"
  ensure
    socket.close
  end

  def logger
    self.class.logger
  end

  # Ctrl-Cを押した時の処理
  # https://bugs.ruby-lang.org/issues/7917
  def on_exit
    Thread.new {
      puts ""
      logger.info('Goodbye!')
      exit
    }.join
  end
end

def use_cpu_and_io
  # IOを使う
  OpenURI.open_uri("https://biz.moneyforward.com/payroll").read

  # CPUを使い切る
  i = 0
  while i < 10_000_000
    i += 1
  end
end

mutex = Mutex.new
reader, writer = IO.pipe
writer.write("0\n")

# リクエストが来たらブロックの中身が実行される
WebCounterServer.new(host: '127.0.0.1', port: '8080').start(workers: 8, threads: 8) do
  count = reader.gets("\n").strip.to_i
  writer.write("#{count + 1}\n")

  # CPUとIOをいい感じに使う処理を書く
  use_cpu_and_io

  body = count.to_s

  <<~RESPONSE
  HTTP/1.1 200 OK
  Content-Length: #{body.bytesize}
  Content-Type: text/plain; charset=utf-8

  #{body}
  RESPONSE
end
